name: Create Debian Package

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

  runs-on: ubuntu-latest

  steps:
  - uses: actions/checkout@v3

  - name: Package
    run: make packageDebian

  - name: Upload Package
    uses: actions/upload-artifact@v2
    with:
      name: UTSaveEditorCLI
